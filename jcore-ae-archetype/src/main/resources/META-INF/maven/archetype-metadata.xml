<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
	name="jcore-component-archetype"
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<requiredProperties>
		<requiredProperty key="artifactId">
			<defaultValue>jcore-name-ae</defaultValue>
		</requiredProperty>
		<requiredProperty key="groupId">
			<defaultValue>de.julielab</defaultValue>
		</requiredProperty>
		<requiredProperty key="version">
			<defaultValue>2.3.0-SNAPSHOT</defaultValue>
		</requiredProperty>
		<requiredProperty key="package">
			<defaultValue>de.julielab.jcore.ae.name</defaultValue>
		</requiredProperty>
		<requiredProperty key="componentName">
			<defaultValue>A human readable component name.</defaultValue>
		</requiredProperty>
		<requiredProperty key="componentDescription">
			<defaultValue>A description for this component.</defaultValue>
		</requiredProperty>
		<requiredProperty key="componentClassname">
			<defaultValue>The name of the UIMA component Java class.</defaultValue>
		</requiredProperty>
	</requiredProperties>
	<fileSets>
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>src/main/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>src/test/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/main/resources</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory></directory>
			<includes>
				<include>LICENSE</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory></directory>
			<includes>
				<include>README.md</include>
			</includes>
		</fileSet>
	</fileSets>
</archetype-descriptor>
